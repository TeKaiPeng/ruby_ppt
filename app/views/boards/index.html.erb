<h1>看板首頁</h1>

    <%= link_to '我的最愛', favorite_board_path(@boards), method: 'post'%>
    <%= link_to "新增看板", new_board_path %>
    <%= link_to "註冊", sign_up_users_path %>
    <%= link_to "登入", sign_in_users_path %><br>

<% @boards.each do |board| %>
    <%= link_to board.title, board_path(board) %>
    <%= link_to "編輯", edit_board_path(board) %>
    <%= link_to "刪除", board_path(board), method:'delete', data: {confirm: '確認刪除？'}%><br>
<% end %>
