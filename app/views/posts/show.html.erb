<h1>文章頁面</h1>

<ul>
    <li>
        <span>作者</span>
        <span><%= @post.user.account %></span>
    </li>
    <li>
        <span>看板</span>
        <span><%= @post.board.title %></span>
    </li>
    <li>
        <span><%= @post.title %></span>
        <span><%= @post.content %></span>
    </li>
    <li>
        <span>時間</span>
        <span><%= @post.created_at %></span>
    </li>
</ul>

<%= @post.content %>
<%= @post.hello %>
<%= image_tag @post.photo.variant(resize_to_limit: [500, 500]) if @post.photo.attached? %>

<%= form_with(model: @comment, url: post_comments_path(@post)) do |form| %>
    <%= form.text_field :content %>
    <%= form.submit '送出' %>
<% end %>

<br>

<% @comments.each do |comment| %>
    <%= comment.content %>
<% end %>